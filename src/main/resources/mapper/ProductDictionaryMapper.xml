<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.dao.ProductDictionaryMapper">

    <resultMap type="com.cloud.entity.ProductDictionary" id="ProductDictionaryMap">
        <result property="uuid" column="uuid" jdbcType="VARCHAR"/>
        <result property="code" column="code" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="values" column="values" jdbcType="VARCHAR"/>
        <result property="level" column="level" jdbcType="INTEGER"/>
        <result property="modifyTime" column="modify_time" jdbcType="TIMESTAMP"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ProductDictionaryMap">
        select
          uuid, code, name, values, level, modify_time, create_time
        from cloudcity.tb_product_dictionary
        <where>
            <if test="uuid != null and uuid != ''">
                and uuid = #{uuid}
            </if>
        </where>
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ProductDictionaryMap">
        select
        uuid, code, name, values, level, modify_time, create_time
        from cloudcity.tb_product_dictionary
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ProductDictionaryMap">
        select
          uuid, code, name, values, level, modify_time, create_time
        from cloudcity.tb_product_dictionary
        <where>
            <if test="uuid != null and uuid != ''">
                and uuid = #{uuid}
            </if>
            <if test="code != null and code != ''">
                and code = #{code}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="values != null and values != ''">
                and values = #{values}
            </if>
            <if test="level != null">
                and level = #{level}
            </if>
            <if test="modifyTime != null">
                and modify_time = #{modifyTime}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert">
        insert into  cloudcity.tb_product_dictionary(uuid,code, name, values, level, modify_time, create_time)
        values (#{uuid},#{code}, #{name}, #{values}, #{level}, #{modifyTime}, #{createTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update cloudcity.tb_product_dictionary
        <set>
            <if test="code != null and code != ''">
                code = #{code},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="values != null and values != ''">
                values = #{values},
            </if>
            <if test="level != null">
                level = #{level},
            </if>
            <if test="modifyTime != null">
                modify_time = #{modifyTime},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        where uuid = #{uuid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from cloudcity.tb_product_dictionary where uuid = #{uuid}
    </delete>

</mapper>