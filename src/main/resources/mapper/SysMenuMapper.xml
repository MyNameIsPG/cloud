<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.dao.SysMenuMapper">

    <resultMap type="com.cloud.entity.SysMenu" id="SysMenuMap">
        <result property="uuid" column="uuid" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="level" column="LEVEL" jdbcType="INTEGER"/>
        <result property="icon" column="icon" jdbcType="VARCHAR"/>
        <result property="url" column="url" jdbcType="VARCHAR"/>
        <result property="menuUuid" column="menu_uuid" jdbcType="VARCHAR"/>
        <result property="isDelete" column="is_delete" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="modifyTime" column="modify_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysMenuMap">
        select
          uuid, name, LEVEL, icon, url, menu_uuid, is_delete, create_time, modify_time
        from cloudcity.tb_sys_menu
        <where>
            <if test="uuid != null and uuid != ''">
                and uuid = #{uuid}
            </if>
        </where>
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysMenuMap">
        select
        uuid, name, LEVEL, icon, url, menu_uuid, is_delete, create_time, modify_time
        from cloudcity.tb_sys_menu
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysMenuMap">
        select
          uuid, name, LEVEL, icon, url, menu_uuid, is_delete, create_time, modify_time
        from cloudcity.tb_sys_menu
        <where>
            <if test="uuid != null and uuid != ''">
                and uuid = #{uuid}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="level != null">
                and LEVEL = #{level}
            </if>
            <if test="icon != null and icon != ''">
                and icon = #{icon}
            </if>
            <if test="url != null and url != ''">
                and url = #{url}
            </if>
            <if test="menuUuid != null and menuUuid != ''">
                and menu_uuid = #{menuUuid}
            </if>
            <if test="isDelete != null">
                and is_delete = #{isDelete}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="modifyTime != null">
                and modify_time = #{modifyTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert">
        insert into  cloudcity.tb_sys_menu(uuid,name, LEVEL, icon, url, menu_uuid, is_delete, create_time, modify_time)
        values (#{uuid},#{name}, #{level}, #{icon}, #{url}, #{menuUuid}, #{isDelete}, #{createTime}, #{modifyTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update cloudcity.tb_sys_menu
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="level != null">
                LEVEL = #{level},
            </if>
            <if test="icon != null and icon != ''">
                icon = #{icon},
            </if>
            <if test="url != null and url != ''">
                url = #{url},
            </if>
            <if test="menuUuid != null and menuUuid != ''">
                menu_uuid = #{menuUuid},
            </if>
            <if test="isDelete != null">
                is_delete = #{isDelete},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="modifyTime != null">
                modify_time = #{modifyTime},
            </if>
        </set>
        where uuid = #{uuid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from cloudcity.tb_sys_menu where uuid = #{uuid}
    </delete>

</mapper>