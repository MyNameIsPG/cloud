<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.dao.SysRoleMenuMapper">

    <resultMap type="com.cloud.entity.SysRoleMenu" id="SysRoleMenuMap">
        <result property="uuid" column="uuid" jdbcType="VARCHAR"/>
        <result property="roleId" column="role_id" jdbcType="VARCHAR"/>
        <result property="menuId" column="menu_id" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysRoleMenuMap">
        select
          uuid, role_id, menu_id
        from cloudcity.tb_sys_role_menu
        <where>
            <if test="uuid != null and uuid != ''">
                and uuid = #{uuid}
            </if>
        </where>
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysRoleMenuMap">
        select
        uuid, role_id, menu_id
        from cloudcity.tb_sys_role_menu
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysRoleMenuMap">
        select
          uuid, role_id, menu_id
        from cloudcity.tb_sys_role_menu
        <where>
            <if test="uuid != null and uuid != ''">
                and uuid = #{uuid}
            </if>
            <if test="roleId != null and roleId != ''">
                and role_id = #{roleId}
            </if>
            <if test="menuId != null and menuId != ''">
                and menu_id = #{menuId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert">
        insert into  cloudcity.tb_sys_role_menu(uuid,role_id, menu_id)
        values (#{uuid},#{roleId}, #{menuId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update cloudcity.tb_sys_role_menu
        <set>
            <if test="roleId != null and roleId != ''">
                role_id = #{roleId},
            </if>
            <if test="menuId != null and menuId != ''">
                menu_id = #{menuId},
            </if>
        </set>
        where uuid = #{uuid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from cloudcity.tb_sys_role_menu where uuid = #{uuid}
    </delete>

</mapper>